{
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.server.tsbuildinfo",
    "target": "ES2023",
    "lib": [
      "ES2023"
    ],
    "module": "ESNext",
    "types": [
      "node"
    ],
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",
    "noEmit": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "erasableSyntaxOnly": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true
  },
  "exclude": [
    "server/services/_archived"
  ],
  "include": [
    "server",
    "api",
    "src/types",
    "src/lib/utils.ts",
    "src/lib/provider-fetch.ts",
    "src/lib/prompts/shared-defaults.ts",
    "src/lib/prompts/helpers.ts",
    "src/lib/prompts/compiler-user.ts",
    "src/lib/prompts/variant-prompt.ts",
    "src/lib/extract-code.ts"
  ]
}
